 <%- include ('./partials/header') %>

<body>
  <div class="row justify-content-center align-items-center mt-lg-4">
    <div class="col-md-9 col-lg-12 col-xl-10">
      <div class="card shadow-lg o-hidden border-0 my-5 roundness">
        <div class="card-body p-4">
          <div class="row">
            <div class="col-lg-6 d-none d-lg-flex">
              <img src="/images/login.svg" alt="" style="width: 100%;">
            </div>
            <div class="col-lg-6">
              <div class="p-5 mt-3">
                <div class="text-center">
                  <% if(error) {%>
                    <div class="alert alert-danger roundness"><%=error%></div>
                  <%} else {%>
                    <h4 class="mb-4 h2 text-accent"><%=__('welcome')%></h4>
                  <%}%>
                </div>
                <form class="user" action="/login" method="POST">
                  <div class="form-group"><input class="form-control form-control-user" type="text"
                      id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter username" name="username">
                  </div>
                  <div class="form-group"><input class="form-control form-control-user" type="password"
                      id="exampleInputPassword" placeholder="Password" name="password"></div>
                  <button class="btn bg-main btn-block text-white btn-user"><span
                      class="h6"><%=__('login')%></span></button>
                  <hr>
                </form>
                <div class="text-center"><a class="text-accent h6" href="/user/register-user"><%=__('noAccount')%></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" style="position: absolute; bottom: 0; z-index:-1">
    <path fill="#0f4c75" fill-opacity="1"
      d="M0,256L80,213.3C160,171,320,85,480,85.3C640,85,800,171,960,186.7C1120,203,1280,149,1360,122.7L1440,96L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z">
    </path>
  </svg>
</body>
