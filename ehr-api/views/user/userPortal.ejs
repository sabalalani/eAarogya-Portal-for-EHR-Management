<%- include ('../partials/footer') %>
                  <script>
                    $(document).ready(function () {
                      $('#nom1').hide()
                      $("#switch1").change(function () {
                        if (this.checked)
                          $('#nom1').show()
                        else
                          $('#nom1').hide()
                      })

                      $('#nom2').hide()
                      $("#switch2").change(function () {
                        if (this.checked)
                          $('#nom2').show()
                        else
                          $('#nom2').hide()
                      })

                      $('#nom3').hide()
                      $("#switch3").change(function () {
                        if (this.checked)
                          $('#nom3').show()
                        else
                          $('#nom3').hide()
                      })

                      $('#nom4').hide()
                      $("#switch4").change(function () {
                        if (this.checked)
                          $('#nom4').show()
                        else
                          $('#nom4').hide()
                      })

                      window.setTimeout(function () {
                        $(".msg").fadeTo(1000, 0).slideUp(500, function () {
                          $(this).remove();
                        });
                      }, 3000);
                    });
                  </script>