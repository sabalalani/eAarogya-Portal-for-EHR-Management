<%- include("./partials/header") %>
    <hr>
    <h3>Pharmacist Portal</h3>
    <hr>

    <div class="container-fluid">

        <div class="card ">
            <div class="card-body cardpharma">
                <h4>Get latest prescription</h4><br>
                <form class="form-inline" action="/organisation/pharmacist/getprescription" method="POST">
                    <input type="text" class="form-control mr-sm-2" name="medicalID" placeholder="Enter Medical ID" aria-label="Search">
                    <button class="btn submit-btn my-2 my-sm-0" type="submit">Get Report</button>
                </form>
            </div>
            <div class="card-body cardpharma">
                <h4>Get prescription history</h4><br>
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="text" placeholder="Enter Medical ID" aria-label="Search">
                    <button class="btn submit-btn my-2 my-sm-0" type="submit">Get Report</button>
                </form>
            </div>
        </div>

        <div class="partition"></div>

        <div class="card">
            <div class="card-body">
                <table>
                    <tr>
                        <td><b>Name</td>
                        <td><%=details.name%></td>
                    </tr>
                    <tr>
                        <td><b>D.O.B</td>
                        <td><%=details.dob%>></td>
                    </tr>
                    <tr>
                        <td><b>Address</td>
                        <td><%=details.address%></td>
                    </tr>
                    <tr>
                        <td class="pres"><b>Prescription</td>
                        <td class="pres"><%=details.prescription%></td>
                    <tr>
            </table>
        </div>
    </div>
</div>
  <%-include("./partials/footer") %>