<%-include("../partials/header.ejs")%>

<div class="container-fluid">
  <div class="cent-auth-container">

  </div>
  <div class="card" id="central-authority-form">
    <div class="card-body">
      <h4>Enroll Patient</h4><br>
      <form class="form-inline" method="post" action="/organisation/centauth">
        <input class="form-control mr-sm-2" type="text" placeholder="Enter Aadhar Number" name="aadhaarNum" aria-label="Search">
        <button class="btn submit-btn my-2 my-sm-0" type="submit">Search</button>
      </form>
      <br>
      <div class="errors">
        <% if(errors.length !== 0) { %>
        <% errors.forEach(error => { %>
        <div class="alert alert-danger" role="alert">
          <%= error.msg %>
        </div>
        <%})%>
        <%}%>
                </div>
            </div>
        </div>





        <!-- <div class="partition"></div> -->

        <div class="card" id="aadhaar-display">
            <div class="card-body">
                <p id="message-display"></p>
                <% if(details.found !== null) { %>
        <p>Aadhaar Number:
          <%=details.aadhaarNo%>
        </p>
        <p>Name:
          <%=details.name%>
        </p>
        <p>Date Of Birth:
          <%=details.dob%>
        </p>
        <p>Gender:
          <%=details.gender%>
        </p>
        <p>Address:
          <%=details.address%>
        </p>
        <!--<div class="alert alert-success" role="alert" style="width: 150px;">EHR created!</div> -->
        <% } else { %>
        <script type="text/javascript">
        document.getElementById("message-display").innerHTML = "<p class=\"alert alert-danger\" role=\"alert\">Details not found in database. Please ensure you have entered the correct Aadhaar number.</p>"
        </script>
        <%}%>
            </div>
        </div>

      </div>
    </div>

    <div class="partition"></div>

    <div class="card">
      <div class="card-body">
        <p id="message-display"></p>
        <% if(details.found !== null) { %>
        <p>Aadhaar Number: <%=details.aadhaarNo%></p>
        <p>Name: <%=details.name%></p>
        <p>Date Of Birth: <%=details.dob%></p>
        <p>Gender: <%=details.gender%></p>
        <p>Address: <%=details.address%></p>
        <% } else { %>
        <script type="text/javascript">
        document.getElementById("message-display").innerHTML = "<p>Details not found in database. Please ensure you have entered the correct Aadhaar number.</p>"
        </script>
        <%}%>
      </div>
    </div>
  </div>


